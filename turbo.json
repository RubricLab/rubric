{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"bleed": {},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["!.next/cache/**", ".next/**", "dist/**"]
		},
		"build:blogit": {
			"env": [
				"OPENAI_API_KEY",
				"SLACK_BLOG_CHANNEL_ID",
				"SLACK_BOT_ID",
				"SLACK_BOT_TOKEN",
				"SLACK_SIGNING_SECRET"
			]
		},
		"build:web": {
			"env": [],
			"outputs": ["!.next/cache/**", ".next/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:web": {
			"cache": false,
			"env": [],
			"persistent": true
		},
		"lint": {}
	}
}
