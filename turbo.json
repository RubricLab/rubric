{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["NODE_ENV", "VERCEL_URL"],
	"pipeline": {
		"bleed": {},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["!.next/cache/**", ".next/**", "dist/**"]
		},
		"build:blogit": {
			"env": [
				"OPENAI_API_KEY",
				"SLACK_BLOG_CHANNEL_ID",
				"SLACK_BOT_ID",
				"SLACK_BOT_TOKEN",
				"SLACK_SIGNING_SECRET"
			]
		},
		"build:web": {
			"env": [
				"NEXT_PUBLIC_SANITY_API_VERSION",
				"NEXT_PUBLIC_SANITY_DATASET",
				"NEXT_PUBLIC_SANITY_PROJECT"
			],
			"outputs": ["!.next/cache/**", ".next/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:web": {
			"cache": false,
			"persistent": true
		},
		"lint": {}
	}
}
