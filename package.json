{
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@turbo/gen": "^2.1.3",
		"@types/node": "^22.7.4",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.0",
		"autoprefixer": "^10.4.20",
		"dotenv-cli": "^7.4.2",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.13",
		"turbo": "^2.1.3",
		"typescript": "^5.6.2",
		"simple-git-hooks": "^2.11.1"
	},
	"name": "rubric",
	"peerDependencies": {
		"node": ">=22"
	},
	"private": true,
	"scripts": {
		"bleed": "turbo run bleed && bun x npm-check-updates -u && bun i",
		"build": "turbo run build",
		"clean": "turbo run clean && rm -rf .next && rm -rf node_modules && find . -name '.turbo' -type d -prune -exec rm -rf {} + && rm bun.lockb",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"lint:mono": "bun x biome check .",
		"lint:fix": "turbo run lint:fix",
		"lint:fix:mono": "bun x biome lint . --write --unsafe",
		"format": "turbo run format",
		"format:mono": "bun x biome format --write .",
		"git:checkout:main:all": "git submodule foreach git checkout main",
		"git:pull:all": "git submodule foreach --quiet 'echo $path' | xargs -P 8 -I {} git -C {} pull origin main",
		"git:clone:all": "git submodule update --init --recursive"
	},
	"workspaces": ["apps/*", "packages/*"],
	"packageManager": "bun@1.1.29",
	"dependencies": {
		"npm-check-updates": "^17.1.3"
	},
	"trustedDependencies": [
		"@rubriclab/actions",
		"@rubriclab/auth",
		"@rubriclab/blocks",
		"@rubriclab/codegen",
		"@rubriclab/config",
		"@rubriclab/events",
		"@rubriclab/memory",
		"@rubriclab/package",
		"@rubriclab/state",
		"@rubriclab/ui",
		"@rubriclab/webhooks",
		"@rubriclab/agents",
		"create-rubric-app",
		"maige",
		"r0",
		"x",
		"@biomejs/biome"
	]
}
